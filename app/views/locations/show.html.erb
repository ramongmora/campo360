<h1 class="mb-4">
  <%= @location.name %>
</h1>

<div class="card mb-4">
  <div class="card-body">
    <p><strong>Address:</strong> <%= @location.address %></p>
    <p><strong>Surface:</strong> <%= @location.surface %></p>
    <p><strong>Latitude:</strong> <%= @location.latitude %></p>
    <p><strong>Longitude:</strong> <%= @location.longitude %></p>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-3 mb-3">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Animals</h5>
        <p class="card-text">View and manage the animals associated with this location.</p>
        <%= link_to 'View Animals', location_animals_path(@location), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="col-md-3 mb-3">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Crops</h5>
        <p class="card-text">Explore and manage the crops at this location.</p>
        <%= link_to 'View Crops', location_crops_path(@location), class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <div class="col-md-3 mb-3">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Employees</h5>
        <p class="card-text">View and manage the employees assigned here.</p>
        <%= link_to 'View Employees', location_employees_path(@location), class: "btn btn-info" %>
      </div>
    </div>
  </div>
  <div class="col-md-3 mb-3">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Schedules</h5>
        <p class="card-text">View and manage the schedules for this location.</p>
        <%= link_to 'View Schedules', location_schedules_path(@location), class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to 'Edit', edit_location_path(@location), class: "btn btn-warning" %>
  <%= link_to 'Back to Locations', locations_path, class: "btn btn-secondary" %>
  <%= link_to 'Delete', location_path(@location), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
