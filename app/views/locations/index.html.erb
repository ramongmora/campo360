<div class="container">
  <div class="d-flex justify-content-between align-items-center mt-4 mb-5">
    <h1 class="text-success mb-0"><i class="bi bi-geo-alt-fill me-2"></i>Tus Ranchos</h1>
    </div>
  <% if @locations.present? %>
    <div class="row g-4">
      <% @locations.each do |location| %>
      <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 border border-success rounded-4 shadow-lg card-hover">
        <div class="card-header bg-gradient bg-success text-white d-flex align-items-center rounded-top-4">
        <i class="bi bi-geo-alt-fill me-2 fs-4"></i>
        <h5 class="card-title mb-0 flex-grow-1">
          <%= link_to location.name, location, class: "stretched-link text-white text-decoration-none fw-semibold" %>
        </h5>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
        <ul class="list-unstyled mb-0">
          <li class="mb-2">
          <i class="bi bi-geo-alt me-1 text-success"></i>
          <strong>Direcci√≥n:</strong>
          <span class="text-muted"><%= location.address %></span>
          </li>
          <li class="mb-2">
          <i class="bi bi-aspect-ratio me-1 text-success"></i>
          <strong>Superficie:</strong>
          <span class="badge rounded-pill bg-success-subtle text-success-emphasis px-3 py-2 fs-6"><%= location.surface %></span>
          </li>
          <li>
          <i class="bi bi-compass me-1 text-success"></i>
          <strong>Lat:</strong>
          <span class="text-secondary"><%= location.latitude %></span>,
          <strong>Lng:</strong>
          <span class="text-secondary"><%= location.longitude %></span>
          </li>
        </ul>
        </div>
      </div>
      </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-end gap-2">
      <%= link_to 'Volver atras', root_path, class: 'btn btn-primary mt-3' %>
      <%= link_to 'Agregar nuevo rancho', new_location_path, class: 'btn btn-success mt-3' %>
    </div>
  <% else %>
    <div class="alert alert-info d-flex flex-column align-items-start">
      <p class="mb-2">No se encontraron ranchos.</p>
      <%= link_to 'Agregar nuevo campo', new_location_path, class: 'btn btn-success m-2' %>
    </div>
  <% end %>
</div>
