<div class="container">
  <h1 class="mb-4 text-success"><i class="bi bi-geo-alt-fill me-2"></i>Tus Campos</h1>
  <% if @locations.present? %>
    <div class="row">
      <% @locations.each do |location| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 border-success shadow-sm">
            <div class="card-header bg-success text-white">
              <h5 class="card-title mb-0">
                <%= link_to location.name, location, class: "stretched-link text-white text-decoration-none" %>
              </h5>
            </div>
            <div class="card-body bg-light">
              <p class="card-text mb-2">
                <i class="bi bi-geo-alt me-1 text-success"></i>
                <strong>Direcci√≥n:</strong> <%= location.address %>
              </p>
              <p class="card-text mb-2">
                <i class="bi bi-aspect-ratio me-1 text-success"></i>
                <strong>Superficie:</strong> <span class="badge bg-success-subtle text-success-emphasis"><%= location.surface %></span>
              </p>
              <p class="card-text">
                <i class="bi bi-compass me-1 text-success"></i>
                <strong>Lat:</strong> <span class="text-secondary"><%= location.latitude %></span>,
                <strong>Lng:</strong> <span class="text-secondary"><%= location.longitude %></span>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-end">
      <%= link_to 'Agregar nuevo campo', new_location_path, class: 'btn btn-success mt-3' %>
    </div>
  <% else %>
    <div class="alert alert-info d-flex flex-column align-items-start">
      <p class="mb-2">No se encontraron campos.</p>
      <%= link_to 'Agregar nuevo campo', new_location_path, class: 'btn btn-success m-2' %>
    </div>
  <% end %>
</div>
