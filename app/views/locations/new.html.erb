
<div class="card mx-auto shadow m-4" style="max-width: 500px;">
  <div class="card-body">
    <h2 class="card-title fw-bold text-center text-success mb-4">
      <i class="bi bi-geo-alt-fill me-2"></i>
      Nueva Ubicación
    </h2>
    <%= simple_form_for(@location, url: locations_path, method: :post) do |f| %>
      <div class="mb-3 input-group">
        <span class="input-group-text"><i class="bi bi-type"></i></span>
        <%= f.input :name, input_html: { class: "form-control w-100", placeholder: "Nombre", style: "flex: 1 1 auto;" }, label_html: { class: "form-label visually-hidden" }, label: false, wrapper_html: { class: "flex-grow-1" } %>
      </div>
      <div class="mb-3 input-group">
        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
        <%= f.input :address, input_html: { class: "form-control w-100", placeholder: "Calle #, Cuidad, Pais", style: "flex: 1 1 auto;" }, label_html: { class: "form-label visually-hidden" }, label: false, wrapper_html: { class: "flex-grow-1" } %>
      </div>
      <div class="mb-3 input-group">
        <span class="input-group-text"><i class="bi bi-aspect-ratio"></i></span>
        <%= f.input :surface, input_html: { class: "form-control w-100", placeholder: "Superficie", style: "flex: 1 1 auto;" }, label_html: { class: "form-label visually-hidden" }, label: false, wrapper_html: { class: "flex-grow-1" } %>
      </div>
      <%= f.button :submit, "Crear Ubicación", class: "btn btn-success w-100 mt-3" %>
    <% end %>
  </div>
</div>
