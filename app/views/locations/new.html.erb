<h1 class="text-center mb-4">New Location</h1>
<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-body">
    <%= simple_form_for @location do |f| %>
      <%= f.input :name, input_html: { class: "form-control" } %>
      <%= f.input :address, input_html: { class: "form-control" } %>
      <%= f.input :surface, input_html: { class: "form-control" } %>
      <%= f.input :latitude, input_html: { class: "form-control" } %>
      <%= f.input :longitude, input_html: { class: "form-control" } %>
      <%= f.button :submit, "Create Location", class: "btn btn-primary w-100 mt-3" %>
    <% end %>
  </div>
</div>
