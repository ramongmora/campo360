<h1 class="mb-4 text-center text-success">Crop Details</h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm mb-4 border-success" style="background: #f9fbe7;">
      <div class="card-header bg-success text-white" style="background: linear-gradient(90deg, #388e3c 60%, #aed581 100%);">
        <h5 class="mb-0"><i class="bi bi-flower1 me-2"></i>Crop Information</h5>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item" style="background: #f1f8e9;">
            <strong>Kind:</strong>
            <span class="float-end"><%= @crop.kind %></span>
          </li>
          <li class="list-group-item" style="background: #f9fbe7;">
            <strong>Surface:</strong>
            <span class="float-end"><%= @crop.surface %></span>
          </li>
          <li class="list-group-item" style="background: #f1f8e9;">
            <strong>Harvest date:</strong>
            <span class="float-end"><%= @crop.harvest_date %></span>
          </li>
          <li class="list-group-item" style="background: #f9fbe7;">
            <strong>Sowing date:</strong>
            <span class="float-end"><%= @crop.sowing_date %></span>
          </li>
          <li class="list-group-item" style="background: #f1f8e9;">
            <strong>Follow:</strong>
            <span class="float-end">
              <i class="bi <%= @crop.follow ? 'bi-check-circle-fill text-success' : 'bi-x-circle-fill text-danger' %>"></i>
            </span>
          </li>
        </ul>
      </div>
    </div>

    <div class="d-flex justify-content-between">
      <%= link_to 'Edit', edit_location_crop_path(@location, @crop), class: "btn btn-success px-4 fw-semibold shadow-sm border-2 text-white", style: "background: #388e3c;" %>
      <%= link_to 'Back', location_crops_path, class: "btn btn-secondary px-4 fw-semibold shadow-sm border-2 text-white", style: "background: #757575;" %>
      <%= link_to "Delete Crop", [@location, @crop], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this crop?" }, class: "btn btn-danger px-4 fw-semibold shadow-sm border-2" %>
    </div>
  </div>
</div>
