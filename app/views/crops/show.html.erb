<div class="container mt-5 pt-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <!-- Imagen del cultivo -->
      <% if @crop.photo.attached? %>
        <div class="text-center mb-4">
          <%= cl_image_tag @crop.photo.key, class: "img-fluid rounded-4 shadow-sm", width: 600, height: 400, crop: :fill %>
        </div>
      <% end %>

      <div class="card shadow-lg mb-5 border-success rounded-4">
        <div class="card-header bg-success text-white bg-gradient rounded-top-4 d-flex align-items-center">
          <h4 class="mb-0 fw-bold"><i class="fa-solid fa-seedling"></i> Detalles del Cultivo</h4>
        </div>
        <div class="card-body p-4 bg-white rounded-bottom-4">
          <ul class="list-group list-group-flush">
            <li class="list-group-item bg-light border-0 d-flex justify-content-between align-items-center">
              <span><i class="fa-solid fa-seedling"></i> <strong>Tipo:</strong></span>
              <span class="fw-semibold "><%= @crop.kind %></span>
            </li>
            <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
              <span><i class="bi bi-aspect-ratio text-success me-2"></i><strong>Superficie:</strong></span>
              <span class="fw-semibold"><%= @crop.surface %></span>
            </li>
            <li class="list-group-item bg-light border-0 d-flex justify-content-between align-items-center">
              <span><i class="bi bi-calendar-check text-success me-2"></i><strong>Fecha de cosecha:</strong></span>
              <span class="fw-semibold"><%= @crop.harvest_date %></span>
            </li>
            <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
              <span><i class="bi bi-calendar-plus text-success me-2"></i><strong>Fecha de siembra:</strong></span>
              <span class="fw-semibold"><%= @crop.sowing_date %></span>
            </li>
            <li class="list-group-item bg-light border-0 d-flex justify-content-between align-items-center">
              <span><i class="bi bi-eye-fill text-success me-2"></i><strong>Seguimiento:</strong></span>
              <span>
                <i class="bi <%= @crop.follow ? 'bi-check-circle-fill text-success' : 'bi-x-circle-fill text-danger' %> fs-5"></i>
              </span>
            </li>
          </ul>
        </div>
      </div>

      <div class="d-flex justify-content-between gap-2 mt-3 mb-5">
        <%= link_to edit_location_crop_path(@location, @crop), class: "btn btn-outline-success px-4 fw-semibold shadow-sm border-2 rounded-pill" do %>
          <i class="bi bi-pencil-square me-2"></i>Editar
        <% end %>
        <%= link_to location_crops_path, class: "btn btn-outline-secondary px-4 fw-semibold shadow-sm border-2 rounded-pill" do %>
          <i class="bi bi-arrow-left me-2"></i>Volver
        <% end %>
        <%= link_to [@location, @crop], data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de que deseas eliminar este cultivo?" }, class: "btn btn-outline-danger px-4 fw-semibold shadow-sm border-2 rounded-pill" do %>
          <i class="bi bi-trash3 me-2"></i>Eliminar Cultivo
        <% end %>
      </div>
    </div>
  </div>
</div>
