<h1 class="mb-4 text-center fw-bold text-success">Edit Crop</h1>

<div class="card shadow border-success border-2 campo-card">
  <div class="card-body p-4 bg-light">
    <%= simple_form_for [@location, @crop], html: { class: "needs-validation" }, method: :patch do |f| %>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.input :kind, input_html: { class: "form-control border-success bg-white campo-input" }, label_html: { class: "form-label fw-semibold text-success campo-label" }, label: "Crop Type" %>
        </div>
        <div class="col-md-6">
          <%= f.input :surface, input_html: { class: "form-control border-success bg-white campo-input" }, label_html: { class: "form-label fw-semibold text-success campo-label" }, label: "Surface" %>
        </div>
        <div class="col-md-6">
          <%= f.input :sowing_date, as: :string, input_html: { class: "form-control border-success bg-white campo-input", type: "date", value: @crop.sowing_date&.strftime("%Y-%m-%d") }, label_html: { class: "form-label fw-semibold text-success campo-label" }, label: "Sowing Date" %>
        </div>
        <div class="col-md-6">
          <%= f.input :harvest_date, as: :string, input_html: { class: "form-control border-success bg-white campo-input", type: "date", value: @crop.harvest_date&.strftime("%Y-%m-%d") }, label_html: { class: "form-label fw-semibold text-success campo-label" }, label: "Harvest Date" %>
        </div>
        <div class="col-12 d-flex justify-content-end align-items-center mt-2 mb-3">
          <div class="form-check form-switch d-flex align-items-center ps-0">
            <%= f.input :follow, as: :boolean, label: "Follow",
            wrapper_html: { class: "form-check mb-0 d-flex align-items-center" },
            input_html: {
              class: "form-check-input border-success",
              role: "switch"
            },
            label_html: { class: "form-check-label fw-semibold text-success ms-3" }
            %>
          </div>
        </div>
        <div class="col-12 d-flex justify-content-end gap-3">
          <%= f.button :submit, "Update Crop", class: "btn btn-success px-4 campo-btn fw-semibold shadow-sm border-2" %>
          <%= link_to "Delete Crop", [@location, @crop], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this crop?" }, class: "btn btn-danger px-4 fw-semibold shadow-sm border-2" %>
        </div>
            </div>
          <% end %>
          <div class="d-flex justify-content-start mt-4">
            <%= link_to "← Back to Crops", location_crops_path(@location), class: "btn btn-outline-success px-4 py-2 fw-semibold shadow-sm border-2" %>
          </div>
    </div>
  </div>
</div>
