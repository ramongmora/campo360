<div class="dashboard-container">

  <div class="container mt-5">
    <h1 class="mb-5 text-center fw-bold display-4">Dashboard</h1>
  </div>

  <div class="container">
    <div class="card shadow-sm mb-5 border-0">
      <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0 h5 fw-semibold">My Locations</h2>
        <%= link_to "New", new_location_path, class: "btn btn-light btn-sm fw-bold shadow-sm" %>
      </div>
      <div class="card-body bg-light">
        <%= form_with url: dashboard_path, method: :get, local: true do %>
          <div class="mb-3">
            <label for="location_select" class="form-label">Selecciona una ubicaci√≥n:</label>
            <%= select_tag :location_id, options_from_collection_for_select(@locations, :id, :name, @location&.id), id: "location_select", class: "form-select", onchange: "this.form.submit();" %>
          </div>
        <% end %>
        <%= render @location if @location %>
      </div>
    </div>
  </div>
</div>
