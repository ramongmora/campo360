<turbo-frame id="dashboard-content">
  <div class="container mt-4">
    <h2>🐄 <%= @animal.alias %></h2>

    <ul class="list-group mb-4">
      <li class="list-group-item"><strong>Raza:</strong> <%= @animal.breed %></li>
      <li class="list-group-item"><strong>Género:</strong> <%= @animal.gender %></li>
      <li class="list-group-item"><strong>Fecha de nacimiento:</strong> <%= @animal.birth_date.strftime("%Y-%m-%d") if @animal.birth_date %></li>
    </ul>

    <div class="d-flex gap-2">
      <%= link_to "✏️ Editar", edit_location_animal_path(@location, @animal), data: { turbo_frame: "dashboard-content" }, class: "btn btn-warning" %>

      <%= button_to "🗑 Eliminar", location_animal_path(@location, @animal),
          method: :delete,
          data: { turbo_confirm: "¿Estás seguro de eliminar este animal?" },
          class: "btn btn-danger" %>

      <%= link_to "🔙 Volver", location_animals_path(@location), data: { turbo_frame: "dashboard-content" }, class: "btn btn-secondary" %>
    </div>
  </div>
</turbo-frame>
