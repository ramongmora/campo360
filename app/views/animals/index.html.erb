<turbo-frame id="dashboard-content">
  <div class="dashboard-container">
    <div class="container">
      <h1 class="mb-4">Animales en <%= @location.name %></h1>

      <%= form_with url: location_animals_path(@location), method: :get, local: false, data: { turbo_frame: "dashboard-content" } do |f| %>
        <div class="mb-3">
          <%= f.text_field :query, placeholder: "Buscar por alias...", class: "form-control" %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= link_to "âž• Agregar Animal",
                    new_location_animal_path(@location),
                    data: { turbo_frame: "dashboard-content" },
                    class: "btn btn-success" %>
      </div>

      <turbo-frame id="animals_list">
        <!-- Cambio: de list-group a grid de tarjetas -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% @animals.each do |animal| %>
            <%= render partial: "animal", locals: { animal: animal, location: @location } %>
          <% end %>
        </div>
      </turbo-frame>
    </div>
  </div>
</turbo-frame>
