<div
  id="<%= dom_id(animal) %>"
  class="animal-item"
  role="button"
  tabindex="0"
  data-controller="animal-line"
  data-animal-line-url-value="<%= location_animal_path(location, animal) %>">

  <!-- Imagen o ícono del animal -->
  <div class="animal-photo-placeholder">
    🐄
  </div>

  <!-- Información -->
  <div class="animal-info">
    <strong class="animal-alias"><%= animal.breed.breed_type %></strong>
    <div class="animal-meta"><%= "🚨" if animal.follow %> - <%= animal.gender %></div>
    <% if animal.birth_date %>
      <div class="animal-meta"><small>Nacido: <%= animal.birth_date.strftime("%Y-%m-%d") %></small></div>
    <% end %>
  </div>

  <!-- Botón visual -->
  <div class="animal-button">
    👁 Ver más
  </div>
</div>
