<div
  id="<%= dom_id(animal) %>"
  class="animal-item"
  role="button"
  tabindex="0"
  data-controller="animal-line"
  data-animal-line-url-value="<%= location_animal_path(location, animal) %>">

  <!-- Imagen o ícono del animal -->
  <div class="animal-photo-placeholder">
    <% if animal.photo.attached? %>
      <%= cl_image_tag animal.photo.key, class: 'img-fluid' %>
    <% else %>
      🐄
    <% end %>
  </div>

  <!-- Información del animal -->
  <div class="animal-info">
    <strong class="animal-alias"><%= animal.alias %></strong>
    <p class="animal-breed"><%= animal.breed.breed_type %></p>
    <div class="animal-meta"><%= "🚨" if animal.follow %> - <%= animal.gender %></div>
    <% if animal.birth_date %>
      <div class="animal-meta"><small>Nacido: <%= animal.birth_date.strftime("%Y-%m-%d") %></small></div>
    <% end %>
  </div>

  <!-- Botón y actividad -->
  <div class="animal-button">
    <%= link_to 'Ver', location_animal_path(@location, animal) %>
  </div>
  <div class="animal-button-secondary">
     <%= link_to 'Agregar Actividad', new_location_schedule_path(@location, animal_id: animal.id), class: 'btn-secondary-animal' %>
  </div>
</div>
