<div class="settings-container">
  <h2>⚙️ Ajustes</h2>

  <section class="settings-section">
    <h3>Información del usuario</h3>
    <div class="settings-item">
      <label for="nombre">Nombre</label>
      <input type="text" id="nombre" placeholder="Juan Pérez" />
    </div>

    <div class="settings-item">
      <label for="correo">Correo electrónico</label>
      <input type="email" id="correo" placeholder="juan@campo360.com" />
    </div>
  </section>

  <section class="settings-section">
    <h3>Preferencias del rancho</h3>
    <div class="settings-item">
      <label for="rancho">Rancho principal</label>
      <select id="rancho">
        <option>Hacienda Napolés</option>
        <option>Rancho Los Sauces</option>
        <option>Granja El Roble</option>
      </select>
    </div>
  </section>

  <section class="settings-section">
    <h3>Notificaciones</h3>
    <div class="settings-item">
      <label>
        <input type="checkbox" checked />
        Recibir alertas por correo
      </label>
    </div>
    <div class="settings-item">
      <label>
        <input type="checkbox" />
        Notificarme sobre pagos pendientes
      </label>
    </div>
  </section>

  <div class="settings-actions">
    <button class="btn-save">Guardar cambios</button>
  </div>
</div>
