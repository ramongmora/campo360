<%= form_with(model: [location, employee], class: "employee-form", local: true) do |f| %>
  <div class="form-group">
    <%= f.label :first_name, "Nombre" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Apellido" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :citizen_register, "CURP" %>
    <%= f.text_field :citizen_register, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :salary, "Sueldo" %>
    <%= f.number_field :salary, class: "form-control", step: 0.01 %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit "Guardar empleado", class: "btn btn-success" %>
    <%= link_to "Cancelar", location_employees_path(location), class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>
