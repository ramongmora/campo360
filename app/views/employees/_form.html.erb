<%= simple_form_for([@location, @employee], html: { class: "employee-form" }) do |f| %>
  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.input :first_name, label: "Nombre", input_html: { class: "form-control" }, wrapper_html: { class: "mb-3" } %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.input :last_name, label: "Apellido", input_html: { class: "form-control" }, wrapper_html: { class: "mb-3" } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.input :email, label: "Correo electrónico", input_html: { type: "email", class: "form-control" }, wrapper_html: { class: "mb-3" } %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.input :citizen_register, label: "Identificacion Nacional", input_html: { class: "form-control" }, wrapper_html: { class: "mb-3" } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.input :salary, label: "Sueldo", as: :decimal, input_html: { step: 0.01, class: "form-control" }, wrapper_html: { class: "mb-3" } %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.input :password, label: "Contraseña", input_html: { class: "form-control" }, wrapper_html: { class: "mb-3" } %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.input :password_confirmation, label: "Confirmar contraseña", input_html: { class: "form-control" }, wrapper_html: { class: "mb-3" } %>
    </div>
  </div>
  <div class="d-flex justify-content-end mt-4">
    <%= f.button :submit, "Guardar empleado", class: "btn btn-success me-2" %>
    <%= link_to "Cancelar", location_employees_path(@location), class: "btn btn-outline-danger" %>
  </div>
<% end %>
