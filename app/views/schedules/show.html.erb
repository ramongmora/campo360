<% if @schedule.schedulable_type == "Animal" %>
  <!-- Mostrar información para Animal (código original) -->
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-success text-white text-center">
            <h1 class="h3 mb-0"><%= @schedule.activity.name %></h1>
            <h2 class="h5 mt-2"><%= @schedule.schedulable.alias %> - #<%= @schedule.schedulable.id %></h2>
          </div>
          <div class="card-body">
            <dl class="row mb-0">
              <dt class="col-sm-4">Ubicación:</dt>
              <dd class="col-sm-8"><%= @schedule.location.name %></dd>

              <dt class="col-sm-4">Actividad:</dt>
              <dd class="col-sm-8"><%= @schedule.activity.name %></dd>

              <dt class="col-sm-4">Animal:</dt>
              <dd class="col-sm-8"><%= @schedule.schedulable.alias %></dd>

              <dt class="col-sm-4">Fecha de Inicio:</dt>
              <dd class="col-sm-8"><%= l(@schedule.start_date, format: :long) %></dd>

              <dt class="col-sm-4">Fecha de Fin:</dt>
              <dd class="col-sm-8"><%= l(@schedule.end_date, format: :long) %></dd>
            </dl>
          </div>
          <div class="card-footer bg-light text-center">
            <%= link_to 'Volver a Actividades', location_schedules_path(@schedule.location), class: 'btn btn-outline-primary' %>
            <%= link_to 'Editar', edit_location_schedule_path(@schedule.location, @schedule), class: 'btn btn-outline-success'  %>
          </div>
        </div>
      </div>
    </div>
  </div>
